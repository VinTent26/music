{
    "compilerOptions": {
        "target": "ES6",// cho phép biên dịch typ sang kiểu ES6
        "module": "commonjs",// là tiêu chuẩn làm việc với các module
        "removeComments": true, //xóa comments khi biên dịch sang file js
        "esModuleInterop": true, // dùng từ khóa import thay cho require
        "outDir": "dist" // biên dịch vào thư mục js
    }
}